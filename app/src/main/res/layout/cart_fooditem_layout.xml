<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="#f5f5f5"
        android:id="@+id/foodCard"
        android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp">

        <androidx.cardview.widget.CardView  android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.6dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="2dp"
                app:cardCornerRadius="3.8dp"
                android:layout_marginRight="10.6dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/Restaurant_Id"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textSize="14.4sp"
                                    android:fontFamily="@font/mont_medium"
                                    android:textColor="#262628"
                                    android:text="Cocobolo Poolside Bar + Grill"/>

                            <TextView
                                    android:id="@+id/Dollar_Id"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center|right"
                                    android:fontFamily="@font/montbold"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="@color/gray"
                                    android:text="$ 312.00"/>


                        </LinearLayout>



                        <TextView
                                android:id="@+id/Address_Id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="11.5sp"
                                android:fontFamily="@font/montmedium"
                                android:textColor="#9b9b9b"
                                android:text="60 Kub Pines Apt. 797"
                                android:layout_marginTop="4dp"/>


                    </LinearLayout>
                </LinearLayout>



                <TextView
                        android:layout_width="match_parent"
                        android:background="@color/white2"
                        android:layout_marginTop="10dp"
                        android:layout_height="1dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="50dp">

                    <LinearLayout android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="left|center"
                            android:gravity="left|center"
                            android:layout_height="match_parent">


                        <com.prathik.ecomshopkeeper.customView.AddButtonView
                                android:layout_width="wrap_content"
                                android:id="@+id/foodAddbtnView"
                                android:layout_height="wrap_content"/>



                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                        <TextView
                                android:layout_width="match_parent"
                                android:text="1 x 312 = 312"
                                android:id="@+id/cart_countPrice"
                                android:textColor="@color/black"
                                android:layout_gravity="right|center"
                                android:fontFamily="@font/mont_bold"
                                android:gravity="right|center"
                                android:layout_height="match_parent"/>
                    </LinearLayout>



                </LinearLayout>




            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>
